<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="evapeng.calculatorapp.CalcModel"/>
    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="evapeng.calculatorapp.MainActivity">

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:textSize="45sp"
            android:text="@{viewModel.display}" />

        <RelativeLayout
            android:id = "@+id/outer"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_alignParentBottom="true">


            <View
            android:id = "@+id/rect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#474747"/>

            <View
                android:id = "@+id/rect2"
                android:layout_alignParentRight="true"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="#999999"/>

            <LinearLayout
                android:id = "@+id/col1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingRight="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/seven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textSize="30sp"
                    android:padding="20dp"
                    android:background="@null"
                    android:textColor="#ffffff"
                    android:onClickListener="@{viewModel.onClick}"/>

                <Button
                    android:id="@+id/four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="30sp"
                    android:padding="20dp"
                    android:background="@null"
                    android:textColor="#ffffff"
                    android:onClickListener="@{viewModel.onClick}"/>

                <Button
                    android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="30sp"
                android:padding="20dp"
                android:background="@null"
                android:textColor="#ffffff"
                android:onClickListener="@{viewModel.onClick}"/>
            </LinearLayout>

            <LinearLayout
                android:id = "@+id/col2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/col1"
                android:paddingTop="20dp"
                android:paddingRight="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/eight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textSize="30sp"
                    android:padding="20dp"
                    android:background="@null"
                    android:textColor="#ffffff"
                    android:onClickListener="@{viewModel.onClick}"/>

                <Button
                    android:id="@+id/five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="30sp"
                    android:padding="20dp"
                    android:background="@null"
                    android:textColor="#ffffff"
                    android:onClickListener="@{viewModel.onClick}"/>

                <Button
                    android:id="@+id/two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="30sp"
                    android:padding="20dp"
                    android:background="@null"
                    android:textColor="#ffffff"
                    android:onClickListener="@{viewModel.onClick}"/>

                <Button
                    android:id="@+id/zero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="30sp"
                    android:padding="20dp"
                    android:background="@null"
                    android:textColor="#ffffff"
                    android:onClickListener="@{viewModel.onClick}"/>
            </LinearLayout>

            <LinearLayout
                android:id = "@+id/col3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/col2"
                android:paddingTop="20dp"
                android:paddingRight="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/nine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textSize="30sp"
                    android:padding="20dp"
                    android:background="@null"
                    android:textColor="#ffffff"
                    android:onClickListener="@{viewModel.onClick}"/>

                <Button
                    android:id="@+id/six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="30sp"
                    android:padding="20dp"
                    android:background="@null"
                    android:textColor="#ffffff"
                    android:onClickListener="@{viewModel.onClick}"/>

                <Button
                    android:id="@+id/three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="30sp"
                    android:padding="20dp"
                    android:background="@null"
                    android:textColor="#ffffff"
                    android:onClickListener="@{viewModel.onClick}"/>

                <Button
                    android:id="@+id/equal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="="
                    android:textSize="30sp"
                    android:padding="20dp"
                    android:background="@null"
                    android:textColor="#ffffff"
                    android:onClickListener="@{viewModel.onClick}"/>
            </LinearLayout>

            <LinearLayout
                android:id = "@+id/col4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="60dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/div"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="รท"
                    android:textSize="30sp"
                    android:padding="20dp"
                    android:background="@null"
                    android:textColor="#ffffff"
                    android:onClickListener="@{viewModel.onClick}"/>

                <Button
                    android:id="@+id/mul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ร"
                    android:textSize="30sp"
                    android:padding="20dp"
                    android:background="@null"
                    android:textColor="#ffffff"
                    android:onClickListener="@{viewModel.onClick}"/>

                <Button
                    android:id="@+id/sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="30sp"
                    android:padding="20dp"
                    android:background="@null"
                    android:textColor="#ffffff"
                    android:onClickListener="@{viewModel.onClick}"/>
                <Button
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="30sp"
                    android:padding="20dp"
                    android:background="@null"
                    android:textColor="#ffffff"
                    android:onClickListener="@{viewModel.onClick}"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>