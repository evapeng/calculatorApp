<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="evapeng.calculatorapp.MainActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:textSize="45sp"
        android:text="1 + 1 = 2" />

    <RelativeLayout
        android:id = "@+id/outer"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true">


        <View
        android:id = "@+id/rect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#474747"/>

        <View
            android:id = "@+id/rect2"
            android:layout_alignParentRight="true"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="#999999"/>

        <LinearLayout
            android:id = "@+id/col1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="30sp"
                android:padding="20dp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="30sp"
                android:padding="20dp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="30sp"
            android:padding="20dp"
            android:textColor="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:id = "@+id/col2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/col1"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="30sp"
                android:padding="20dp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="30sp"
                android:padding="20dp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="30sp"
                android:padding="20dp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="30sp"
                android:padding="20dp"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:id = "@+id/col3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/col2"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="30sp"
                android:padding="20dp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="30sp"
                android:padding="20dp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="30sp"
                android:padding="20dp"
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="30sp"
                android:padding="20dp"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:id = "@+id/col4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="60dp"
            android:paddingRight="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="รท"
                android:textSize="30sp"
                android:padding="20dp"
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/mul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ร"
                android:textSize="30sp"
                android:padding="20dp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="30sp"
                android:padding="20dp"
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="30sp"
                android:padding="20dp"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
